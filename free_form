!module
class=extra
!view
view=title
text=Android Freeform
@show
echo true
@show
!view

!view
view=subtitle
text=Enable / Disable Android Freeform（Only support AOSP-like ROMs）
@show
echo true
@show
!view

!view
view=switch
text=Enable free form
root=true
core=true
@show
if [ `getprop ro.build.version.sdk` -gt 24 ]
then
echo true
fi
@show
@current
if [ `settings get global enable_freeform_support` == 1 ]
then
echo true
fi
@current
@click
settings put global enable_freeform_support $switch
echo @toast=Reboot to apply
@click
!view
!module
