!view
view=spinner
core=true
root=true
text=安装软件时：
item=everything|speed|space|quicken|verify|extract|assume-verified
@show
if [ `getprop ro.build.version.sdk` -gt 25 ]
then
echo true
fi
@show
@current
echo label=`getprop pm.dexopt.install`
@current
@done
setprop pm.dexopt.install $label

cache="/data/build.cache.prop"
target="/system/build.prop"
mount -o rw,remount /system
sed '/pm.dexopt.install=/'d $target > $cache
cp $cache $target
echo "pm.dexopt.install=$label" >> $target
rm -f $cache
mount -o ro,remount /system
@done
!view

