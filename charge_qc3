!model
class=charge
!view
view=title
text=QC3.0 fast charge
@show
echo true
@show
!view

!view
view=subtitle
text=Choose whether to enable QC3.0\n(Not necessarily valid)
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/class/power_supply/battery/allow_hvdcp3 ]
then
echo true
fi
@show

root=true
core=true

@current
if [ `cat /sys/class/power_supply/battery/allow_hvdcp3` == 1 ]
then
echo true
fi
@current

@click
echo $switch > /sys/class/power_supply/battery/allow_hvdcp3
@click

!view

!model