!module
class=cpua

!view
view=title
text=MediaTek Misc controller
@show
echo true
@show
!view

!view
view=switch
root=true
text=Multi-core control
core=true
@show
if [ -e /proc/hps/enabled ]
then
echo true
fi
@show
@current
if [ `cat /proc/hps/enabled` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /proc/hps/enabled
@click
!view

!view
view=subtitle
text=*Thermal manager will be unable to control cores and all cores(quatity is defined in next item) should be enabled, all sharing cpu0's govenorment if disabled.
!view

!view
view=edittext
text=Maximum cores allowed to enable:
@current
cat /proc/hps/num_limit_thermal
@current
@show
if [ -e /proc/hps/num_limit_thermal ]
then
echo true
fi
@show
@done
echo $edittext > /proc/hps/num_limit_thermal
@done
root=true
core=true
!view
!module
