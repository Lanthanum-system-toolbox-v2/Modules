!module
class=io
!view
view=title
text=(存储I/O)硬盘存储
@show
echo true
@show
!view

!view
view=subtitle
text=将设备视作硬盘存储
@show
echo true
@show
!view

!view
view=switch
text=启用
@show
if [ -e /sys/block/sda/queue/rotational ]
then
echo true
fi
@show
core=true
@current
if [ `cat /sys/block/sda/queue/rotational` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/block/sda/queue/rotational
@click
root=true
!view
!module
