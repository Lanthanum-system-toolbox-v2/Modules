!module
class=io
!view
view=title
text=Hard Drive (Storage I/O)
@show
echo true
@show
!view

!view
view=subtitle
text=(UFS)Regard device as a hard drive.
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/block/sda/queue/rotational ]
then
echo true
fi
@show
core=true
@current
if [ `cat /sys/block/sda/queue/rotational` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/block/sda/queue/rotational
@click
root=true
!view
!module
