!module
class=extra
!view
view=title
text=Wake up on double-tap
@show
echo true
@show
!view

!view
view=subtitle
text=Enable/Disable wake up on double-tap
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/devices/virtual/touch/tp_dev/gesture_on ]
then
echo true
fi
@show
root=true
core=true
@click
echo $switch > /sys/devices/virtual/touch/tp_dev/gesture_on
@click
@current
if [ `cat /sys/devices/virtual/touch/tp_dev/gesture_on` == 1 ]
then
echo true
fi
@current

!view

!module
