!module
class=io

!view
view=title
text=Network I/O Tweaker
@show
echo true
@show
!view

!view
view=subtitle
text=Configure network I/O Tweaker (TCP Tweaker)
@show
echo true
@show
!view

!view
view=spinner
text=Tweaker
@show
if [ -e /proc/sys/net/ipv4/tcp_available_congestion_control ]
then
echo true
fi
@show
core=true
item_file_tcp=/proc/sys/net/ipv4/tcp_available_congestion_control
@done
echo $label > /proc/sys/net/ipv4/tcp_congestion_control
echo @toast=Successfully applied.
@done
@current
echo "label=`cat /proc/sys/net/ipv4/tcp_congestion_control`"
@current
root=true
onboot=true
!view


!module
