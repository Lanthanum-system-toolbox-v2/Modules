!module
class=extra
!view
view=title
text=Off-screen wake up on fingerprint
@show
echo true
@show
!view

!view
view=subtitle
text=Enable off-scrren wakeup on fingerprint on some of Xiaomi phones using FPC.
@show
echo true
@show

!view

!view
view=switch
text=Enable

@show
if [ -e /sys/devices/soc/soc:fpc_fpc1020/enable_wakeup ]
then
echo true
fi
@show

@current
if [ `cat /sys/devices/soc/soc:fpc_fpc1020/enable_wakeup` == "1" ]
then
echo true
fi
@current

core=true

root=true

@click
echo $switch > /sys/devices/soc/soc:fpc_fpc1020/enable_wakeup
@click
!view

!module
