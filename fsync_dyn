!module
class=io
!view
view=title
text=Dynamic Fsync
@show
echo true
@show
!view

!view
view=subtitle
text=When enabled, the Fsync operation is synchronized when the screen is turned on. When the screen is closed, Fsync will become asynchronous. \n (provided by a third-party kernel)
@show
echo true
@show

!view

!view
view=switch
text=Enable

@show
if [ -e /sys/kernel/dyn_fsync/Dyn_fsync_active ]
then
echo true
fi
@show

@current
if [ `cat /sys/kernel/dyn_fsync/Dyn_fsync_active` == 1 ]
then
echo true
fi
@current

core=true

root=true

@click
echo $switch > /sys/kernel/dyn_fsync/Dyn_fsync_active
@click
!view

!module