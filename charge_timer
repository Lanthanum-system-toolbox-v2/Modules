!model
class=charge
!view
view=title
text=Charge timer
@show
echo true
@show
!view

!view
view=subtitle
text=The effect is unknown, perhaps to a certain extent, to make current changes more gradual
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/class/power_supply/battery/safety_timer_enabled ]
then
echo true
fi
@show

root=true
core=true

@current
if [ `cat /sys/class/power_supply/battery/safety_timer_enabled` == 1 ]
then
echo true
fi
@current

@click
echo $switch > /sys/class/power_supply/battery/safety_timer_enabled
@click

!view

!model