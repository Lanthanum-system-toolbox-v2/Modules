!module
class=cpua
!view
view=title
text=Tap to increase frequency
@show
echo true
@show
!view

!view
view=subtitle
text=Activate the interface in kernel to get tap to increase frequency(full support in device tree is required for a complete enabling)\n（By third-party kernels）
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/module/msm_performance/parameters/touchboost ]
then
echo true
fi
@show
@click
echo $switch > /sys/module/msm_performance/parameters/touchboost
@click
@current
if [ `cat /sys/module/msm_performance/parameters/touchboost` == 1 ]
then
echo true
fi
@current
core=true
root=true
!view

!module
