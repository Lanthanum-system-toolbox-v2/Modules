!module
class=extra
!view
view=title
text=LMK(Low Memory Killer) Configuration
@show
echo true
@show
!view

!view
view=subtitle
text=Configure LMK
@show
echo true
@show
!view

!view
view=switch
text=Self-adaptive LMK
@current
if [ `cat /sys/module/lowmemorykiller/parameters/enable_adaptive_lmk` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/module/lowmemorykiller/parameters/enable_adaptive_lmk
@click
root=true
core=true
@show
if [ -e /sys/module/lowmemorykiller/parameters/enable_adaptive_lmk ]
then
echo true
fi
@show
!view

!view
view=switch
text=LMK Debugging Log（Boost performance if disabled）
@current
if [ `cat /sys/module/lowmemorykiller/parameters/debug_level` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/module/lowmemorykiller/parameters/debug_level
@click
root=true
core=true
@show
if [ -e /sys/module/lowmemorykiller/parameters/debug_level ]
then
echo true
fi
@show
!view
!module
