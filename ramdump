!module
class=extra
!view
view=title
text=Ramdump
@show
echo true
@show
!view

!view
view=subtitle
text=It is useful for debugging system crash, but almost useless for a user.
@show
echo true
@show
!view

!view
view=switch
text=Enable
@current
if [ `cat /sys/module/subsystem_restart/parameters/enable_ramdumps` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/module/subsystem_restart/parameters/enable_ramdumps
@click
root=true
core=true
@show
if [ -e /sys/module/subsystem_restart/parameters/enable_ramdumps ]
then
echo true
fi
@show
!view
!module
