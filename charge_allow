!model
class=charge
!view
view=title
text=Allow charge
@show
echo true
@show
!view

!view
view=subtitle
text=Disable/enable charging after power on
@show
echo true
@show
!view

!view
view=switch
text=Allow charge
@show
if [ -e /sys/class/power_supply/battery/battery_charging_enabled ]
then
echo true
fi
@show

root=true
core=true

@current
if [ `cat /sys/class/power_supply/battery/battery_charging_enabled` == 1 ]
then
echo true
fi
@current

@click
echo $switch > /sys/class/power_supply/battery/battery_charging_enabled
@click

!view

!model
