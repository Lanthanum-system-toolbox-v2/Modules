!model
class=charge
!view
view=title
text=USB fast charge
@show
echo true
@show
!view

!view
view=subtitle
text=Choose whether to enable USB fast charge (provided by a third-party kernel)
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/kernel/fast_charge/force_fast_charge ]
then
echo true
fi
@show

root=true
core=true

@current
if [ `cat /sys/kernel/fast_charge/force_fast_charge` == 1 ]
then
echo true
fi
@current

@click
echo $switch > /sys/kernel/fast_charge/force_fast_charge
@click

!view

!model