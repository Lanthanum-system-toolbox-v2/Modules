!module
class=io
!view
view=title
text=Add Randomness (Storage I/O)
@show
echo true
@show
!view

!view
view=subtitle
text=(UFS)Get entropy from rotational device
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/block/sda/queue/add_random ]
then
echo true
fi
@show
core=true
@current
if [ `cat /sys/block/sda/queue/add_random` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/block/sda/queue/add_random
@click
root=true
!view
!module
