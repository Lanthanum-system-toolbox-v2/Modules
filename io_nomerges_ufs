!module
class=io
!view
view=title
text=(Storage I/O) Debug Helper
@show
echo true
@show
!view

!view
view=subtitle
text=(UFS)Boost performance if disabled
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/block/sda/queue/nomerges ]
then
echo true
fi
@show
core=true
@current
if [ `cat /sys/block/sda/queue/nomerges` == 1 ]
then
echo true
fi
@current
@click
echo $switch > /sys/block/sda/queue/nomerges
@click
root=true
!view
!module
