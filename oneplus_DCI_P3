!module
class=extra
!view
view=title
text=DCI_P3 wide color range
@show
echo true
@show
!view

!view
view=subtitle
text=Enable DCI-P3 on OnePlus 3/3t if supported. Known that most OP 3T and some OP 3 with their screen replaced support this mode.
@show
echo true
@show

!view

!view
view=switch
text=Enable DCI-P3

@show
if [ -e /sys/devices/virtual/graphics/fb0/DCI_P3 ]
then
echo true
fi
@show

@current
if [ `cat /sys/devices/virtual/graphics/fb0/DCI_P3` == "1" ]
then
echo true
fi
@current

core=true

root=true

@click
echo $switch > /sys/devices/virtual/graphics/fb0/DCI_P3
@click
!view

!module
