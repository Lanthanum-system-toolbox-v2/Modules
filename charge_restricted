!model
class=charge
!view
view=title
text=Restricted charging
@show
echo true
@show
!view

!view
view=subtitle
text=This will limit the current to a preset value in the kernel
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/class/power_supply/battery/restricted_charging ]
then
echo true
fi
@show

root=true
core=true

@current
if [ `cat /sys/class/power_supply/battery/restricted_charging` == 1 ]
then
echo true
fi
@current

@click
echo $switch > /sys/class/power_supply/battery/restricted_charging
@click

!view

!model