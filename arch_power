!module
class=cpua
!view
view=title
text=Arch Power
@show
echo true
@show
!view

!view
view=subtitle
text=Enable arch-specific power save\n（Provided by third-party kernels）
@show
echo true
@show
!view

!view
view=switch
text=Enable
@show
if [ -e /sys/kernel/sched/arch_power ]
then
echo true
fi
@show
root=true
core=true
@click
echo $switch > /sys/kernel/sched/arch_power
@click
@current
if [ `cat /sys/kernel/sched/arch_power` == 1 ]
then
echo true
fi
@current

!view

!module
