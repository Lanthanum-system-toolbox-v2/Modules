!module
class=charge
!view
view=title
text=Battery temperature threshold
@show
echo true
@show
!view

!view
view=subtitle
text=These parameters decides when to slow down the charging speed.
@show
echo true
@show
!view

!view
view=edittext
text=Battert too-high-temperature threshold:
@show
if [ -e /sys/class/power_supply/bms/temp_warm ]
then
echo true
fi
@show
@current
cat /sys/class/power_supply/bms/temp_warm
@current
@done
echo $edittext >/sys/class/power_supply/bms/temp_warm
@done
core=true
root=true
!view

!view
view=edittext
text=Battery too-low-temperature thresholdï¼š
@show
if [ -e /sys/class/power_supply/bms/temp_cool ]
then
echo true
fi
@show
@current
cat /sys/class/power_supply/bms/temp_cool
@current
@done
echo $edittext >/sys/class/power_supply/bms/temp_cool
@done
core=true
root=true
!view



!module
