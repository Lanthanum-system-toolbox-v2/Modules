!module
class=cpua
!view
view=title
text=Performance boost config status controller
@show
echo true
@show
!view

!view
view=subtitle
text=whether to enable Performance boostã€‚Maybe boost performance on sudden peak jobs, but the parameter in processor adjustment will also be changed. Disable if you want static parameters.
@show
echo true
@show

!view

!view
view=switch
text=On

@show
if [ -e /system/vendor/etc/perf/perfboostsconfig.xml ] || [ -e /system/vendor/etc/perf/perfboostsconfig.xml.bak ]
then
echo true
fi
@show

@current
if [ -e /system/vendor/etc/perf/perfboostsconfig.xml ]
then
echo true
fi
@current

core=true

root=true

@click
mount -o rw,remount /system
mount -o rw,remount /vendor
if [ $switch == 1 ]
then
mv /system/vendor/etc/perf/perfboostsconfig.xml.bak /system/vendor/etc/perf/perfboostsconfig.xml
else
mv /system/vendor/etc/perf/perfboostsconfig.xml /system/vendor/etc/perf/perfboostsconfig.xml.bak
fi
mount -o ro,remount /system
mount -o ro,remount /vendor
echo @toast=Refresh the page is recommended to check if succeed. Applied after reboot.
echo @ierror
@click
!view

!module
